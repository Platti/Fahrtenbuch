<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="at.fhooe.mc.fahrtenbuch.FeedbackActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center_horizontal"
            android:layout_marginTop="40dp">

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_smiley1"
                android:layout_above="@+id/textView2"
                android:layout_alignRight="@+id/button_saveTrip"
                android:layout_alignEnd="@+id/button_saveTrip"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:background="@drawable/feedback_1_n"/>

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_smiley2"
                android:layout_above="@+id/textView2"
                android:layout_alignRight="@+id/button_saveTrip"
                android:layout_alignEnd="@+id/button_saveTrip"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:background="@drawable/feedback_2_n" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_smiley3"
                android:layout_above="@+id/textView2"
                android:layout_alignRight="@+id/button_saveTrip"
                android:layout_alignEnd="@+id/button_saveTrip"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:background="@drawable/feedback_3_n" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_smiley4"
                android:layout_above="@+id/textView2"
                android:layout_alignRight="@+id/button_saveTrip"
                android:layout_alignEnd="@+id/button_saveTrip"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:background="@drawable/feedback_4_n" />

            <ImageButton
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/button_smiley5"
                android:layout_above="@+id/textView2"
                android:layout_alignRight="@+id/button_saveTrip"
                android:layout_alignEnd="@+id/button_saveTrip"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:background="@drawable/feedback_5_n" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Description:"
            android:id="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/textView_description"
            android:layout_marginTop="50dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_description"
            android:layout_centerVertical="true"
            android:inputType="textPersonName" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save trip"
            android:id="@+id/button_saveTrip"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="150dp" />

    </LinearLayout>

</RelativeLayout>
